<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:background="#fff"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <ImageView
                android:id="@+id/imageView9book"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"

                app:srcCompat="@drawable/test_back" />

            <TextView
                android:id="@+id/textView4title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@+id/imageView9book"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5genre"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4title"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/imageView9book"
                android:text="TextView"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="279dp"
                android:layout_height="169dp"
                android:layout_below="@+id/textView5genre"
                android:layout_marginStart="-32dp"
                android:layout_marginTop="-25dp"
                android:layout_toEndOf="@+id/imageView9book"
                app:srcCompat="@drawable/rating" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
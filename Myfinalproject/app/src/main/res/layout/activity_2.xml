<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plain_backround"
    tools:context=".Activity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5pro"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_person_pink" />

        <ImageView
            android:id="@+id/imageView8f"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_bookmark_add" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="313dp"
        android:layout_height="195dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/logo_no_backround" />


    <ListView
        android:id="@+id/mylistview"
        android:layout_width="377dp"
        android:layout_height="474dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />


</LinearLayout>
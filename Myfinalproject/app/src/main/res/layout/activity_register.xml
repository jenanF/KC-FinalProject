<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#457B9D"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView3logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editTextusername3reg"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/editext_custom"
        android:hint="User Name"
        android:paddingStart="18dp"
        android:textColorHint="#8C8686"
        android:drawableStart="@drawable/name_icon"
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:ems="10"
        android:paddingEnd="18dp"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/editTextAge3reg"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/editext_custom"
        android:hint="Age"
        android:paddingStart="18dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#8C8686"
        android:drawableStart="@drawable/icon_age"
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:ems="10"
        android:paddingEnd="18dp"
        android:inputType="number"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextEmailAddress3reg"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/editext_custom"
        android:hint="Email Address"
        android:paddingStart="18dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#8C8686"
        android:paddingEnd="18dp"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextPassword3reg"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/editext_custom"
        android:hint="Password"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textColorHint="#8C8686"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:textColor="@color/black"
        android:inputType="textPassword"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonJoinUs3reg"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_sign"
        android:enabled="true"
        android:text="join us"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:text="already have an account?"
            android:textColor="#D8D8D8"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewLogin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Log in"
            android:textColor="#FFA69E"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
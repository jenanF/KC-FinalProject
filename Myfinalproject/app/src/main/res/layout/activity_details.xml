<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkee"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/bookimageD"
        android:layout_width="264dp"
        android:layout_height="407dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/test_back" />

    <TextView
        android:id="@+id/texttitleView"
        android:layout_width="208dp"
        android:layout_height="70dp"
        android:layout_below="@+id/bookimageD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="59dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/writerName"
        android:layout_width="308dp"
        android:layout_height="42dp"
        android:layout_below="@+id/bookimageD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="135dp"
        android:text="TextView"
        android:textColor="#6A6666"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pricenumber"
        android:layout_width="154dp"
        android:layout_height="47dp"
        android:layout_below="@+id/bookimageD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="274dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="#B6E382"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/descrptiontext"
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        android:layout_below="@+id/bookimageD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="34dp"
        android:text="TextView"
        android:textColor="#978F8F"
        android:textSize="16sp" />



</RelativeLayout>
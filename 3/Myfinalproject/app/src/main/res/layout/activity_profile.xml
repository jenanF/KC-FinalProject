<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plain_backround"
    tools:context=".Profile_Activity">


    <ImageView
        android:id="@+id/imageViewhome"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_gravity="end"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        app:srcCompat="@drawable/ic_home" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:text="your profile :"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="280dp"
        android:layout_height="154dp"
        android:src="@drawable/logo_no_backround"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textViewuser"
        android:layout_width="168dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:drawableStart="@drawable/ic_person_pink"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="    TextView"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewemail"
        android:layout_width="172dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_email_pink"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="    TextView"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="168dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/ic_lock_pink"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="    ******"
        android:textColor="@color/black"
        android:textSize="20dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#457B9D"
    tools:context=".publishingActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="286dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo_no_backround" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:text="The first step in turning your dream into reality"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddresspatr"
        android:layout_width="339dp"
        android:layout_height="48dp"
     android:layout_gravity="center_horizontal"
        android:background="@drawable/editext_custom"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="8dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextTextphoneAddresspart"
        android:layout_width="339dp"
        android:layout_height="48dp"
        android:background="@drawable/editext_custom"
        android:drawableStart="@drawable/icon_phonen"
        android:drawablePadding="8dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonsendit"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_sign"
        android:enabled="false"
        android:layout_marginTop="20dp"
        android:text="Send"
        android:textSize="20dp" />

</LinearLayout>